[Unit]
Description=Docker compose service starter
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=${DOCKER_COMPOSE_DIR}
ExecStart=/usr/bin/docker-compose -f "${DOCKER_COMPOSE_DIR}/docker-compose.yaml" up -d
ExecStop=/usr/bin/docker-compose -f "${DOCKER_COMPOSE_DIR}/docker-compose.yaml" down

[Install]
WantedBy=multi-user.target